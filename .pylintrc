[MASTER]
# Maximum number of lines in a module
max-module-lines=200

# Files to ignore
ignore=pyproject.toml

[MESSAGES CONTROL]
# Disable missing docstring warnings
disable=missing-module-docstring,missing-class-docstring,missing-function-docstring

[DESIGN]
max-args=3
max-locals=15
max-statements=50
max-branches=20
max-returns=6
max-attributes=10
max-public-methods=20
max-parents=7

# Complexity settings
max-complexity=10
min-public-methods=1
min-similarity-lines=4

[METRICS]
# Enable complexity metrics
compute-complexity=yes

